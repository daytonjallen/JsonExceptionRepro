@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<button @onclick=@this.CallJsHello>Log Hello World</button>

@code {
    [Inject]
    IJSRuntime JS { get; set; }

    [JSInvokable("LogHelloWorld")]
    public static async Task LogHelloWorld()
    {
        await Task.Delay(100);
        Console.WriteLine("Hello World");
    }

    private async Task CallJsHello()
    {
        await JS.InvokeVoidAsync("logHelloWorld");
    }

}